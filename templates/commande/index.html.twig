{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Liste commande</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Code</th>
                <th>Client</th>
                <th>Date de commande</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.dateComm ? commande.dateComm|date('Y-m-d') : '' }}</td>
                <td>{{ commande.idClient.nom }}</td>
                <td>
                    <a
                     role="button" 
	   				 class="btn btn-primary edit-data"
                     href="{{ path('commande_show', {'id': commande.id}) }}">show</a>
                    <a 
                      role="button" 
	   				 class="btn btn-primary edit-data"
                    href="{{ path('commande_edit', {'id': commande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a  role="button" 
	   	class="btn btn-success edit-data" href="{{ path('commande_new') }}">Create new</a>
{% endblock %}
